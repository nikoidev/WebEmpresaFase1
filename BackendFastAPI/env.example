# Configuración de ejemplo para Web Empresa Backend

# Entorno de ejecución
ENVIRONMENT=development
# Opciones: development, staging, production

# Base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/webempresa_db

# Seguridad
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Solo en producción especificar exactamente
# En desarrollo se detecta automáticamente
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com

# Para desarrollo local
DEVELOPMENT_MODE=true

# Para producción en AWS EC2
# ENVIRONMENT=production
# DEVELOPMENT_MODE=false  
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# DATABASE_URL=postgresql://user:pass@rds-endpoint:5432/dbname

# Para staging
# ENVIRONMENT=staging
# DEVELOPMENT_MODE=false
# ALLOWED_ORIGINS=https://staging.yourdomain.com